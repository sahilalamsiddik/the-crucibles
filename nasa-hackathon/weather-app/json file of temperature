import requests
import json


lat, lon = 12.97, 77.59  


url = f"https://power.larc.nasa.gov/api/temporal/daily/point?parameters=T2M,WS2M,PRECTOT&community=RE&longitude={lon}&latitude={lat}&start=19850101&end=20251001&format=JSON"

response = requests.get(url)


data = response.json()


with open("nasa_power_1985_2025.json", "w") as f:
    json.dump(data, f, indent=2)

print(" Data saved as nasa_power_1985_2025.json")
